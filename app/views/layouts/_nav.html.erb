
<div class="ui large inverted menu">
  <a class="item">
    <%= link_to root_path do %>
      <%= image_tag "favicon.ico",  height: 50%>
    <% end %>
  </a>
  <%= link_to "Chatroom", root_path, class: "item" %>
  <a class="item">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item" style="display: none">
      Language <i class="dropdown icon"></i>
      <div class="menu">
        <a class="item">English</a>
        <a class="item">Russian</a>
        <a class="item">Spanish</a>
      </div>
    </div>

    <div class="ui category search">
      <%= form_tag(search_path, method: "get", class: "d-flex") do%>
        <div class="ui icon input">
            <%= search_field_tag :search, params[:search], placeholder: 'Article', class: "prompt", required: true %>
            <%= button_tag '<i class="search icon inverted"></i>'.html_safe, class: 'message-submit' %>
        </div>
      <%end %>
    </div>
    <div class="item">
      <% if logged_in? %>
        <%= link_to "Log out", logout_path, class: "ui primary button", data: {turbo_method: :delete} %>
      <% else %>
        <%= link_to "Log in", login_path, class: "ui primary button" %>
      <% end %>
    </div>
  </div>
</div>